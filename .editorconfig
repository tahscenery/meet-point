# This is the top-most EditorConfig file
root = true

# Line endings
[*]
end_of_line = lf
insert_final_newline = true

# Indentation settings for Javascript files
[*.{js,ts}]
indent_style = space
indent_size = 2

# Indentation settings for Javascript files
[*.svelte]
indent_style = space
indent_size = 2

# Indentation settings for JSON files
[*.json]
indent_style = space
indent_size = 2
